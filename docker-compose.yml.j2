version: '3.3'
services:
  v2fly:
    container_name: v2fly
    image: v2fly/v2fly-core:latest
    volumes:
      - {{ v2fly_conf }}:/etc/v2ray/config.json:ro
      - {{ cert_dir }}:{{ container_cert_dir | mandatory }}:ro
    {% if expose_ports %}
    ports: {% for port in expose_ports %}
      - "{{ port }}:{{ port }}"
    {% endfor %}
    {% endif %}
